---
import App from "@/components/app.astro";
import { Image } from "astro:assets";
import { Copy, PartyPopper } from "lucide-astro";
import { siteData } from "@/data/site";
---

<App
	title={siteData.referral.title}
	description={siteData.referral.description}>
	<div class="w-full h-64 md:h-80 lg:h-96 overflow-hidden">
		<Image
			src={"/images/banner.webp"}
			alt="MariBank Referral Banner"
			width={1200}
			height={800}
			class="w-full h-full object-cover mask-[linear-gradient(to_bottom,black_40%,transparent)]"
		/>
	</div>

	<div class="max-w-7xl mx-auto px-4">
		<div class="text-center pb-12 md:pb-14 pt-8 px-4">
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold drop-shadow-lg mb-4 leading-tight">
				{siteData.referral.title}
			</h1>
			<p
				class="text-white text-base md:text-lg lg:text-xl mb-8 drop-shadow-md leading-relaxed">
				Use referral code below when signing up!
			</p>

			<div
				class="inline-block bg-linear-to-br from-orange-500 to-orange-400 border-4 border-dashed border-white/40 rounded-3xl p-8 md:p-12 mb-6 shadow-2xl hover:shadow-3xl transition-all duration-300">
				<div
					class="flex items-center justify-center gap-3 flex-wrap select-none">
					<span
						class="text-white text-4xl md:text-5xl lg:text-7xl font-black tracking-wider md:tracking-widest drop-shadow-lg">
						{siteData.referral.code}
					</span>
					<button
						data-code={siteData.referral.code}
						onclick="navigator.clipboard.writeText(this.dataset.code); this.classList.add('copied'); setTimeout(() => this.classList.remove('copied'), 5000)"
						class="group bg-white/30 hover:bg-white/50 active:scale-95 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300">
						<span class="flex items-center gap-2 group-[.copied]:hidden">
							<Copy class="w-5 h-5" />
							Copy Code
						</span>
						<span class="hidden items-center gap-2 group-[.copied]:flex">
							<PartyPopper class="w-5 h-5" />
							Copied!
						</span>
					</button>
				</div>
			</div>
		</div>

		<div class="py-10 md:py-12 px-4">
			<h2
				class="text-center text-white text-2xl md:text-3xl lg:text-4xl font-bold mb-8 md:mb-10 drop-shadow-lg">
				How to Get Your {siteData.referral.bonus} Bonus?
			</h2>
			<div
				class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 md:gap-6">
				{
					siteData.steps.map((step) => (
						<div class="bg-white rounded-3xl p-8 md:p-10 text-center shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
							<div class="w-16 h-16 md:w-20 md:h-20 bg-linear-to-br from-orange-600 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-5 shadow-lg">
								<span class="text-white text-3xl md:text-4xl font-black">
									{step.number}
								</span>
							</div>
							<h3 class="text-orange-600 text-xl md:text-2xl font-bold mb-3 leading-snug">
								{step.title}
							</h3>
							<p
								class="text-gray-600 text-sm md:text-base leading-relaxed"
								set:html={step.description}
							/>
						</div>
					))
				}
			</div>
		</div>

		<div class="text-center py-10 md:py-12 pb-16 md:pb-20 px-4">
			<h2
				class="text-white text-2xl md:text-3xl lg:text-4xl font-bold mb-8 md:mb-10 drop-shadow-lg leading-tight">
				Download MariBank Now!
			</h2>
			<div class="flex justify-center gap-4 md:gap-5 flex-wrap">
				<a
					href="https://play.google.com/store/apps/details?id=ph.seabank.seabank&hl=en"
					target="_blank"
					class="inline-flex items-center justify-center gap-4 hover:scale-110 transition-transform duration-300"
					rel="noopener noreferrer"
					aria-label="Download MariBank from Google Play Store">
					<Image
						src="/images/playstore-btn.webp"
						alt="Google Play Store"
						width={200}
						height={60}
						class="h-14 md:h-16 lg:h-20 w-auto"
					/>
				</a>
				<a
					href="https://apps.apple.com/ph/app/maribank-ph-seabank/id1592249158"
					target="_blank"
					class="inline-flex items-center justify-center gap-4 hover:scale-110 transition-transform duration-300"
					rel="noopener noreferrer"
					aria-label="Download MariBank from Apple App Store">
					<Image
						src="/images/appstore-btn.webp"
						alt="Apple App Store"
						width={200}
						height={60}
						class="h-14 md:h-16 lg:h-20 w-auto"
					/>
				</a>
			</div>
		</div>
	</div>
</App>
